@{
    ViewData["Title"] = "Home Page";
}
@model MyMovie




<div class="text-center">
    <h1 class="display-4 pageHeader" >Welcome To MovieQs</h1>
    <style>
        .circle-button {
            display: inline-flex;
            justify-content:center;
            align-items: center;
            width: 210px;
            height: 210px;
            border-radius: 50%;
            background-color: mediumpurple;
            color: #fff;
            font-weight: bold;
            text-align: inherit,center,start;
            line-height: 50px;
            margin-top: 50px;
        }
    </style>
    <a class="circle-button" href="/Home/ViewMovie">CLICK FOR RANDOM MOVIE</a>

    @if(Model != null)
    {
        <table class="table">
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Popularity</th>
                <th>Overview</th>
            </tr>

    
            <tr>
                <td>@Model.Id</td>
                <td style=" font-weight: bold;">@Model.Title</td>
                <td>@Model.Popularity</td>
                <td>@Model.Overview</td>
            </tr>
        </table>
    }
    







